<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.rails.physicals.mapper.UserMapper">

    <resultMap type="cn.rails.physicals.entity.UserInfo" id="userInfoMap">
        <id property="id" column="id"/>
        <result property="username" column="user_name"/>
        <result property="realName" column="real_name"/>
        <result property="identityCard" column="identity_card"/>
        <result property="jobNumber" column="job_number"/>
        <result property="phone" column="phone"/>
        <result property="password" column="password"/>
        <result property="salt" column="salt"/>
        <result property="pwdStatus" column="pwd_status"/>
        <result property="gender" column="gender"/>
        <result property="lastLoginTime" column="last_login_time"/>
        <result property="department" column="department" />
        <result property="subDepartment" column="sub_department"/>
        <result property="userUuid" column="userUuid"/>
        <result property="version" column="version"/>
        <result property="remark" column="remark"/>
        <result property="createId" column="create_id"/>
        <result property="createDate" column="create_date"/>
        <result property="updateId" column="update_id"/>
        <result property="updateDate" column="update_date"/>
        <result property="delFlag" column="del_flag"/>
    </resultMap>

    <sql id="allSql">
		id,user_name,real_name,identity_card,job_number,phone,password,salt,pwd_status,gender,last_login_time,department,sub_department,userUuid,version,remark,create_id,create_date,update_id,update_date,del_flag
	</sql>


    <select id="searchUserInfoList" resultMap="userInfoMap" parameterType="cn.rails.physicals.entity.UserInfo">
        select
            <include refid="allSql"></include>
        from system_user_info
        where 1=1
        <if test="realName!=null and realName!=''">
            and real_name  LIKE concat('%',#{realName},'%')
        </if>
        order by a.priority desc
    </select>





</mapper>